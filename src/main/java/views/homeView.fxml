<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.HomeController">
   <top>
      <ImageView fitHeight="74.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@codeparty_logo.jpg" />
         </image>
         <BorderPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </BorderPane.margin>
      </ImageView>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Welcome to Codeparty. View all lists here:">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <padding>
                  <Insets bottom="20.0" top="30.0" />
               </padding>
            </Label>
            <Button fx:id="peopleAll" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onPeopleClick" text="People">
               <padding>
                  <Insets bottom="20.0" top="20.0" />
               </padding>
            </Button>
            <Button fx:id="projectsAll" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onProjectsClick" text="Projects">
               <padding>
                  <Insets bottom="20.0" top="20.0" />
               </padding>
            </Button>
            <Button fx:id="skillsAll" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSkillsClick" text="Skills">
               <padding>
                  <Insets bottom="20.0" top="20.0" />
               </padding>
            </Button>
            <Button fx:id="jobsAll" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onJobsClick" text="Jobs">
               <padding>
                  <Insets bottom="20.0" top="20.0" />
               </padding>
            </Button>
            <Button fx:id="companiesAll" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCompaniesClick" text="Companies">
               <padding>
                  <Insets bottom="20.0" top="20.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
